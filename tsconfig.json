{
    "compilerOptions": {
        "removeComments": true,
        "outDir": "./dist/",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "jsx": "react",
        "lib": [
            "dom",
            "es2016"
        ],
        "paths": {
            "robot-api": [
                "./app/api"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}